.theme-container.custom-page-class {
  /* 特定页面的 CSS */
  ::-webkit-scrollbar {
    width: 6px;
    background-color: #f5f5f5;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 6px;
    background-color: #ccc;
  }

  ::-webkit-scrollbar-track {
    border-radius: 6px;
    background-color: #f5f5f5;
  }
}